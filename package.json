{
	"name": "nice-idb",
	"type": "module",
	"packageManager": "pnpm@10.16.1",
	"imports": {
		"#nice-idb/*": "./src/*",
		"#types": {
			"types": "./src/types.d.ts"
		}
	},
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"default": "./src/index.js"
		},
		"./types": {
			"types": "./src/types.d.js"
		},
		"./util": {
			"types": "./types/util.d.js",
			"default": "./src/util.js"
		}
	},
	"main": "./src/index.js",
	"types": "./types/index.d.ts",
	"files": [
		"src",
		"types"
	],
	"scripts": {
		"lint": "eslint",
		"build": "tsc -p tsconfig.types.json",
		"test:browser": "vitest"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.7.3",
		"@vitest/browser-webdriverio": "^4.0.18",
		"eslint": "^9.39.2",
		"lint-staged": "^16.2.7",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
